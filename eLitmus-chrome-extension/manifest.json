{
  "name": "Hello Extension",
  "version": "1.0",
  "description": "Testing the hello world extension",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting",
    "http://*/",
    "https://*/",
    "<all_urls>",
    "storage"
  ],
  "content_scripts": [
    {
      "js": [
        "webcam.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "host_permissions": [
    "https://example.com/*"
  ],
  "action": {
    "default_title": "Click Me",
    "default_popup": "Index.html"
  }
}